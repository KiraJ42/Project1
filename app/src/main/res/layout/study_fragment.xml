<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="Start Studying"
        android:textOn="Done!"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="0:00:00"
        android:textSize="45sp"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/inc"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dec"
        android:layout_toStartOf="@+id/dec"
        android:layout_marginTop="96dp" />

    <Button
        android:id="@+id/dec"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/inc"
        android:text="-"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/inc"
        android:layout_alignBottom="@+id/inc"
        android:layout_toStartOf="@+id/inc"
        android:layout_toRightOf="@+id/goal_text"
        android:layout_toEndOf="@+id/goal_text" />

    <TextView
        android:id="@+id/goal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/goal"
        android:layout_alignBottom="@+id/goal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Goal (minutes): "
        android:textSize="26sp" />

</RelativeLayout>